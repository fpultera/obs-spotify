{
  "functions": {
    "api/*.py": {
      "runtime": "vercel-python@0.13.2"
    }
  },
  "routes": [
    { "src": "/api/login", "dest": "/api/login.py" },
    { "src": "/api/callback", "dest": "/api/callback.py" },
    { "src": "/api/state", "dest": "/api/state.py" },
    { "src": "/api/widget", "dest": "/api/widget.py" }
  ]
}
